{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
        "label": "Run app",
        "type": "shell",
        "command": "${config:python.pythonPath}",
        "args": [
            "-m",
            "server_manager",
            "online-mode",
            "${input:online-mode}"
        ],
        "problemMatcher": []
    }
],
  "inputs": [
    {
      "id": "online-mode",
      "type": "pickString",
      "options": ["True", "False", ""],
      "description": "Set online mode"
    }
  ]
}
